@model IEnumerable<TravelBlog.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<header>
    <div class="site-brand text-center">
        <div class="container">
            <a href="index.html">
                <h2>Travel And Share</h2>
            </a>

        </div>
    </div>
    <div class="header-inner">
        <div class="container">
            <div class="row">
                <div class="col-md-9 col-sm-8 col-xs-3 pos-s">
                    <button class="menu-toggle">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </button>
                    <nav class="navbar navbar-default">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="menu-item active">
                                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })

                                </li>
                                <li class="menu-item dropdown">
                                    <a href="#" data-toggle="dropdown" class="dropdown-toggle" aria-haspopup="true">Pages <span class="caret"></span></a>
                                    <ul role="menu" class=" dropdown-menu">
                                        <li class="menu-item">@Html.ActionLink("Panel", "Index", "Panel", new { area = "" }, new { @class = "nav-link" })</li>
                                        <li class="menu-item">@Html.ActionLink("MyBlogs", "Index", "UserBlog", new { area = "" }, new { @class = "nav-link" })</li>
                                        <li class="menu-item">@Html.ActionLink("My Dashboard", "Index", "UserDashboard", new { area = "" }, new { @class = "nav-link" })</li>

                                    </ul>
                                </li>

                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-9 text-md-center">
                    <div class="search-toggle">

                        <i class="fa fa-search"></i>
                    </div>
                    <ul class="social-icons-menu list-unstyled">
                        <li>
                            @if (ViewBag.LoggedInUser == null)
                            {
                                @Html.ActionLink("Login", "Index", "Login", new { area = "" }, new { @class = "nav-link" })<i class="fa fa-facebook"></i>

                            }
                        </li>
                        <li>
                            @if (ViewBag.LoggedInUser != null)
                            {
                                @ViewBag.LoggedInUser.Name @ViewBag.LoggedInUser.Surname
                                <a href="@Url.Action("Logout", "Login")">
                                    &nbsp;<i class="fa fa-sign-out"></i> Logout
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="search-area">
        <span class="close-search">
            <i class="fa fa-close"></i>
        </span>
        <div class="display-table">
            <div class="display-table-cell">
                <form role="search" method="get" class="search-form" action="#">
                    <input type="search" class="search-field" placeholder="Search..." name="s" required="required">
                    <button type="submit" class="search-submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div style="background-color: #f5f5f5; width: 25%; margin: 10px; float: left; height: 150px">
        <img src="https://www.markum.com/blog/wp-content/uploads/2017/11/kisisel-blog.jpg" alt="Blog Image" style="width: 100%; height: 170px;">
        <div style="background-color: #f5f5f5; padding: 15px; text-align: center;">
            <span>Blog sayım: @Model.Count() </span>
        </div>
    </div>


    <div style="background-color: #f5f5f5; width: 25%; margin: 10px; float: left; height: 150px">
        <img src="https://cdn.wmaraci.com/nedir/like2.png" alt="Blog Image" style="width: 100%; height: 170px;">

        <div style="background-color: #f5f5f5; padding: 15px; text-align: center;">
            <span>Beğendiğim blog sayısı: @ViewBag.LikedBlogsCount</span>
        </div>
    </div>

    <div style="background-color: #f5f5f5; width: 25%; margin: 10px; float: left; height: 150px">
        <img src="https://www.cities.com/media/img/main-slide/slide-1.jpg" alt="Blog Image" style="width: 100%; height: 170px;">
        <div style="background-color: #f5f5f5; padding: 15px; text-align: center;">
            <span>Gezdiğim il sayısı:  @ViewBag.CitiesForBlogs </span>
        </div>
    </div>


</div>


