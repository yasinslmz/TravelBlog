            @Html.EditorFor(model => model.Blog.postDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Blog.postDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Blog.UserId, "UserName", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Blog.UserId, Model.Users, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Blog.UserId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
